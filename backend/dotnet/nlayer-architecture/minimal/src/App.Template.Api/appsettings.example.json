{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=apptemplate_db;Username=YOUR_DATABASE_USERNAME;Password=YOUR_DATABASE_PASSWORD"
  },
  "Sso": {
    "BaseUrl": "http://localhost:8083",
    "LoginPath": "/login",
    "LogoutPath": "/logout",
    "Comment": "Configuration for centralized user management (SSO). Update these URLs to point to your central SSO server to use it directly."
  },
  "Jwt": {
    "Secret": "YOUR_JWT_SECRET_KEY_HERE_MINIMUM_32_CHARACTERS_LONG",
    "Issuer": "AppTemplate",
    "Audience": "AppTemplate",
    "ExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7,
    "Comment": "JWT configuration for authentication. Generate a secure 32+ character secret key. RefreshTokenExpirationDays controls how long refresh tokens are valid."
  },
  "FileStorage": {
    "Path": "uploads/"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*:/api/auth/login",
        "Period": "1m",
        "Limit": 10
      },
      {
        "Endpoint": "*",
        "Period": "1s",
        "Limit": 10
      },
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 200
      }
    ]
  }
}
